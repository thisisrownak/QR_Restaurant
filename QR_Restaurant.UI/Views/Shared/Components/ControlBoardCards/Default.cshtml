@model ControlBoardCountViewModel
<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body mb-0">
                <div class="row">
                    <div class="col-8 align-self-center">
                        <div class="">
                            <h4 class="mt-0 header-title">احصائيات مسح المنيو</h4>
                            <h2 class="mt-0 font-weight-bold text-dark">@Model.MenuScanCount</h2>
                            <p class="mb-0 text-muted"><span class="text-success"><i class="mdi mdi-arrow-up"></i>@Model.MenuScanGrouth%</span> عن الاسبوع الماضي</p>
                        </div>
                    </div><!--end col-->
                    <div class="col-4 align-self-center">
                        <div class="icon-info text-right">
                            <i class="dripicons-cart bg-soft-warning"></i>
                        </div>
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end card-body-->
            <div class="card-body overflow-hidden p-0">
                <div class="d-flex mb-0 h-100 dash-info-box">
