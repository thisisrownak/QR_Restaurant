
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#btnReports').toggleClass('btn-outline');
        });

    </script>
}

<div class="row">
    @await Component.InvokeAsync("RestaurantManagerMenu")
    <div class="col-md-9">
        <div class="row">
            <div class="widget red-bg p-lg text-center">
                <a href="/report/OrderHistory" class="text-white">
                    <div class="m-b-md">
                        <i class="fa fa-history fa-4x"></i>
                        <h3 class="font-bold no-margins">
                            @SharedLocalizer.GetLocalizedValue("OrderHistory")
                        </h3>
                    </div>
                </a>
            </div>
            <div class="widget red-bg p-lg text-center">
                <a href="/report/SoldStocks" class="text-white">
                    <div class="m-b-md">
                        <i class="fa fa-barcode fa-4x"></i>
                        <h3 class="font-bold no-margins">
                            @SharedLocalizer.GetLocalizedValue("SoldStocks")
                        </h3>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>